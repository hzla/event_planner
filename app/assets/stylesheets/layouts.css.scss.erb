@import 'variables';
/** Headers and Background **/

#main-header {
	position: fixed;
	height: 60px;
	top: 0;
	width: 100%;
	text-align: center;
	line-height: 60px;
	font-size: 32px;
	z-index: 2;
	background: white;
}

.main-logo {
	position: absolute;
	left: 40px;
	top: 5px;
	width:200px;
}

#header-right-pic {
	width: 100%;
	height: 100%;
}

.header-pic-container {
	position: relative;
	width: 40px;
	height: 40px;
	position: absolute;
	right: 40px;
	top: 10px;
	border-radius: 40px;
	cursor: pointer;
}

.header-pic-container:hover .profile-tooltip, .header-pic-container:hover .tail  {
	display: block;
	font-size: 16px;
}

.header-pic-container .profile-tooltip {
	width: 80px;
	left: -30px;
}

.header-pic-container .tail {
	left: 10px;
}

#counter-header {
	width: 100%;
	position: absolute;
	top: 0px;
	background: $light-grey;
	height: 40px;
	text-align: center;
	line-height: 40px;
}

#content-container {
	position: absolute;
	width: 100%;
	height: calc(100% - 60px);
	top: 60px;
	background-size: 100%;
	background-position: center;
}

.s1 {
	background-image: image_url("BG_2.png");
}

.default-img {
	background-image: image_url("BG.png");
}

.app-store-bg {
	background-image: image_url("BG.png");
}

/** General Layout Within Content Boxes **/

#content-box {
	width: 720px;
	margin: 0 auto;
	margin-top: 12vh;
	position: relative;
	border-radius: 3px;
}

.box-content {
	width: 100%;
	background: white;
}

.content-row {
	width: 100%;
	padding-left: 20px;
	padding-right: 20px;
	text-align: center;
	padding-bottom: 10px;
	box-sizing: border-box;
}


/********* Media Queries **************/

/********** Reduced font sizes, added styling for icons in the header  ************/

@media (max-width: 1023px) {
	body {
		#main-header {
			font-size: 17px;
			height: 40px;
			line-height: 40px;
		}
		#header-right-pic {
			display: none;
		}
		#content-container {
			border-top: solid 1px $light-grey;
			position: absolute;
			width: 100%;
			height: calc(100% - 50px);
			top: 50px;
		}
		#content-container.default-img {
			background-image: image_url("BG_2.png");
			background-size: cover;
			background-position: center;
		}
		.s1, #content-container.s2.default-img {
			background: white;
		}

		#content-container.landing.default-img {
			border-top: none;
			height: calc(100% - 60px);
			top: 60px;
		}
		.main-logo {
			display: block;
			position: static;
			margin: 0 auto;
			margin-top: 5px;
			height: 40px;
			width: 170px;
		}
		.main-logo.text {
			font-size: 17px;
			height: 44px;
			margin: 0;
			position: absolute;
			top: 0px;
			line-height: 44px;
			left: calc(50% - 100px);
		}
		#sign-up-content, #sign-up-box {
			width: 100%;
		}
		#sign-up-circle, #or, form {
			display: none;
		}
		#header-left {
			position: absolute;
			width: 30px;
			left: 10px;
			top: 8px;
		}
		#header-right {
			position: absolute;
			height: 44px;
			font-size: 17px;
			line-height: 44px;
			right: 10px;
			color: $green;
		}
	}
}
