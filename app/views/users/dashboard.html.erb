<%= content_for :header do %>
	<div class="header-pic-container">
		<%= image_tag current_user.profile_pic_url, id: 'header-right-pic' %>
			<div class="profile-tooltip">
				<%= current_user.name %><br>
				<%= link_to logout_path, class: "logout" do %>Logout<% end %></div>
			<div class="tail"></div>
	</div>
		<div class="hidden desk-text" id="cancel-form">Cancel</div>
		<%= image_tag current_user.profile_pic_url, id: 'header-left', :class => "mobile" %>
		<div class="main-logo text mobile">INSTAGATOR</div>
<% end %>



	<div id="content-container" class="welcome-dashboard gray-back generic">
		<% if @events.empty? %>
		<div id="welcome-text-container" class="full-white-block">
			<%= image_tag 'instagatoricon.svg', id: "welcome-icon" %>
			<div id="welcome-text" class="medium-text">
				Welcome to Instagator, the easiest way to plan events.
			</div>
		</div>
		<div id="create-poll" class="btn-rnd turq-btn">
			Get Started
		</div>

<% else %>
		<div class="service-header full-white-block">
			<div class="service-tabs">
				<div class="browse service-tab active">Ongoing Polls</div>
				<div class="chosen service-tab">Reservations</div>
			</div>
		</div>
		<% @events.each do |event| %>
			<%= link_to results_path(id: event.id, ongoing: !event.finished) do %>
				<div class="full-white-block event">
					<div class="event-info">
						<div class="event-name"><%= event.name %></div>
						<div class="event-status">
							<% if event.voted %>
								<%= image_tag 'checkgreen.svg', :class => "event-icon" %>
							<% else %>
								<%= image_tag 'checkgrey.svg', :class => "event-icon" %>
							<% end %>

							<%= "#{'You Instagated,' if event.user == current_user}"  %>
							<%= event.vote_count %> Voted
						</div>
						<div class="event-time"><%= image_tag 'timegray.svg', :class => "event-icon" %> Ongoing</div>
					</div>
				</div>
			<% end %>
		<% end %>
		<div id="create-poll" class="btn-rnd turq-btn">
			Create Poll
		</div>
	<% end %>
		
		<%= form_tag polls_path, id: "emails-form" do %>
			<%= hidden_field_tag :email_list, nil, id: "email-list", value: "#{current_user.email}, " %>
		<% end %>

		<div id="poll-creator" class="hidden">
			<div class="full-white-block">
				<%= text_field_tag :email, nil, id: "invite-email", placeholder: "Add an invitee's email.." %>
			</div>
			<div class="btn blue-btn" id="add-email-btn">
				Add
			</div>

			<div id="invitees-container" class="full-white-block">
				<div class="invitees">
					<div class="invitee"><%= current_user.email %></div>
				</div>
			</div>

			<div class="submit-emails hidden btn blue-btn">Continue</div>
		</div>
</div>


