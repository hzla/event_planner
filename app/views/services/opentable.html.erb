<%= content_for :header do %>
	<div class="header-pic-container">
		<div id="header-right-pic" class="done submit-options">Done</div>
	</div>
		<div class="main-logo text mobile">Open Table</div>
		<div id="header-right" class="no-mobile submit-options">Open Table</div>
<% end %>

<%= form_tag choices_path(event_id: @event_id), id: 'options-form' do %>
	<%= hidden_field_tag :image_url_list, nil, id: "image-url-list" %>
	<%= hidden_field_tag :title_list, nil, id: "title-list" %>
	<%= hidden_field_tag :info_list, nil, id: "info-list" %>
<% end %>

<div class="generic" id="content-container">
	<div class="service-header full-white-block">
		<div class="service-tabs">
			<div class="browse service-tab active">Browse</div>
			<div class="chosen service-tab">Selected</div>
		</div>
	</div>

	<div class="full-grey-block small-padded">
		All restaurants near me in <%= current_user.location || "San Francisco, California" %>
	</div>

	<div class="service-options full-white-block">
		<% @options.each do |option| %>
			<div class="option mobile-text">
				<%= image_tag Opentable.image_for(option), :class => "option-pic" %>
				<%= image_tag 'checkgreen.svg', :class => "option-check" %>
				<div class="option-title bold"><%= option["name"] %></div>
				<div class="option-info"><%= option["address"] %></div>
			</div>
		<% end %>
	</div>
</div>
